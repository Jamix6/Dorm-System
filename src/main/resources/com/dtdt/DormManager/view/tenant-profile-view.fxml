<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.TenantProfileController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1A1A1A;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Text fill="WHITE" text="Profile">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Pane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 30;" />
                <VBox>
                    <Label fx:id="tenantNameLabel" text="Tenant Name" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                    <Label fx:id="tenantIdLabel" text="Tenant ID" textFill="#555555">
                        <font><Font size="16.0" /></font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <Hyperlink onAction="#goToDashboard" text="Dashboard" />
                <Hyperlink text="Profile" style="-fx-font-weight: bold; -fx-underline: true;" />
                <Hyperlink onAction="#goToPayment" text="Payment" />
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="tenantEmailLabel" text="tenant@test.com" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Label text="Tenant" textFill="#555555" />
                </VBox>
                <Hyperlink onAction="#onLogoutClick" text="Logout" />
            </HBox>

            <VBox style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" VBox.vgrow="ALWAYS" spacing="15">
                <HBox alignment="CENTER_LEFT">
                    <Text text="Personal Information">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Text>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button text="Change Password" onAction="#onChangePasswordClick" style="-fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>

                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="10" /></padding>
                    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nameField" text="Tenant Name" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="emailField" text="tenant@test.com" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Student ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="studentIdField" text="S12345" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Building:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="buildingField" text="Building A" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Room:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextField fx:id="roomField" text="Room 5210" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>