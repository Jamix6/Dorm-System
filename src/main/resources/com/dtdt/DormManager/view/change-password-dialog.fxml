<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #F4F7FC; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dtdt.DormManager.controller.ChangePasswordDialogController">
    <children>
        <Text text="Change Your Password" fill="#333333">
            <font><Font name="System Bold" size="18.0"/></font>
        </Text>
        <Text text="Enter your current password and a new one." fill="#666666" textAlignment="CENTER" wrappingWidth="300.0">
            <font><Font size="12.0"/></font>
        </Text>

        <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="300.0">
            <Label text="Current Password">
                <font><Font size="12.0"/></font>
            </Label>
            <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                           style="-fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;" />

            <Label text="New Password">
                <font><Font size="12.0"/></font>
            </Label>
            <PasswordField fx:id="newPasswordField" promptText="Enter new password (min 8 chars)"
                           style="-fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;" />

            <Label text="Confirm New Password">
                <font><Font size="12.0"/></font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                           style="-fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;" />

            <Label fx:id="errorMessageLabel" textFill="RED" visible="false" managed="false" wrapText="true" />
        </VBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button text="Change Password" onAction="#handlePasswordChange"
                    style="-fx-background-color: #1A1A1A; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand; -fx-pref-width: 150;" />
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #DDDDDD; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand; -fx-pref-width: 100;" />
        </HBox>
    </children>
</VBox>