<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dtdt.DormManager.controller.LoginController"
            prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F4F7FC;">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0"/>
            </padding>
            <Text text="Dorm Management System (SIGN IN)" fill="#333333">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" maxWidth="350">
            <VBox alignment="CENTER" spacing="10.0"
                  style="-fx-background-color: #FFFFFF; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);">

                <Text text="Dorm Management System" wrappingWidth="300.0" textAlignment="CENTER">
                    <font><Font name="System Bold" size="18.0"/></font>
                </Text>
                <Text text="Sign in to your account to continue" fill="#888888" wrappingWidth="300.0" textAlignment="CENTER"/>

                <VBox spacing="15.0" alignment="CENTER">
                    <VBox spacing="5.0" prefWidth="300.0">
                        <Label text="Student ID"/>
                        <TextField fx:id="studentIdField" promptText="Enter your student ID"/>
                    </VBox>
                    <VBox spacing="5.0" prefWidth="300.0">
                        <Label text="Email"/>
                        <TextField fx:id="emailFieldLogin" promptText="your.email@university.edu"/>
                    </VBox>
                    <VBox spacing="5.0" prefWidth="300.0">
                        <Label text="Password"/>
                        <PasswordField fx:id="passwordFieldLogin" promptText="Enter your password"/>
                    </VBox>

                    <Button fx:id="signInButton" text="Sign In" onAction="#onSignInClick"
                            prefWidth="300.0" prefHeight="40.0"
                            style="-fx-background-color: #1A1A1A; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"/>
                </VBox>

                <HBox alignment="CENTER" spacing="5.0">
                    <Text text="Don't have an account?"/>
                    <Text text="Sign up" style="-fx-fill: #007AFF; -fx-font-weight: bold; -fx-cursor: hand;"
                          onMouseClicked="#goToSignUp"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>