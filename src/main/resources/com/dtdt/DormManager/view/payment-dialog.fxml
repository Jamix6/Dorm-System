<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.PaymentDialogController" style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-background-radius: 8;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Make a Payment" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="Amount" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="amountField" promptText="e.g. 5000.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Payment Method" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="selectedMethodLabel" text="(method)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Reference/Txn No." GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="referenceField" promptText="Transaction or reference number" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Payer Name" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="payerNameField" promptText="Name on payment" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" style="-fx-alignment: center_right; -fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" />
        <Button fx:id="submitButton" text="Submit Payment" style="-fx-background-color: #1A1A1A; -fx-text-fill: white;" onAction="#onSubmit" />
    </HBox>
</GridPane>
